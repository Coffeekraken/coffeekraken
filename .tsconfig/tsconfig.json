{
  "exclude": [
    "/**/node_modules",
    "/**/__wip__",
    "/**/__old__",
    "/**/__tests__.wip"
  ],
  "compilerOptions": {
    "incremental": false,
    "allowJs": true,
    "strict": true,
    "inlineSourceMap": true,
    "traceResolution": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": false,
    "noStrictGenericChecks": false,
    "allowSyntheticDefaultImports": true
  }
}

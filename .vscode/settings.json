{
    "files.exclude": {
        "**/sugar/js/**": true,
        "**/sugar/node/**": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // Default (format when you paste)
    "editor.formatOnPaste": true,
    // Default (format when you save)
    "editor.formatOnSave": true,
}

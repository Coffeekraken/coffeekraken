{
  "files.exclude": {
    // "**/sugar/js/**": true,
    // "**/sugar/node/**": true,
    // "**/*.js": {
    //   "when": "$(basename).ts"
    // },
    "**/*.js.map": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Default (format when you paste)
  "editor.formatOnPaste": true,
  // Default (format when you save)
  "editor.formatOnSave": true,
  "todo-tree.general.enableFileWatcher": true,
  "todo-tree.general.tags": [
    "@todo",
    "@fixme",
    "@fix",
    "@feature",
    "stable",
    "beta",
    "alpha",
    "wip"
  ],
  "todo-tree.filtering.includeGlobs": ["**/src/**/*.ts"],
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules",
    "**/.vscode",
    "**/.github"
  ],
  "todo-tree.regex.regex": "((\\*|//|#|<!--|;|/\\*)\\s*($TAGS)|@status\\s*($TAGS))",
  "todo-tree.filtering.useBuiltInExcludes": true,
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "white",
    "icon": "check",
    "type": "tag",
    "borderRadius": "0",
    "rulerLane": "full"
  },
  "todo-tree.highlights.customHighlight": {
    "stable": {
      "hideFromTree": true,
      "gutterIcon": true,
      "icon": "check-circle-fill",
      "background": "#C3DC2A",
      "iconColour": "#C3DC2A"
    },
    "beta": {
      "hideFromTree": true,
      "gutterIcon": true,
      "icon": "rocket",
      "background": "#FCE163",
      "iconColour": "#FCE163"
    },
    "alpha": {
      "hideFromTree": true,
      "gutterIcon": true,
      "icon": "stopwatch",
      "background": "#F6963E",
      "iconColour": "#F6963E"
    },
    "wip": {
      "hideFromTree": true,
      "gutterIcon": true,
      "icon": "tools",
      "background": "#F2515B",
      "iconColour": "#F2515B"
    },
    "@todo": {
      "gutterIcon": true,
      "icon": "list-unordered",
      "background": "#FDBC3E",
      "iconColour": "#FDBC3E"
    },
    "@fixme": {
      "gutterIcon": true,
      "icon": "alert",
      "background": "#EE6492",
      "iconColour": "#EE6492"
    },
    "@fix": {
      "gutterIcon": true,
      "icon": "alert",
      "background": "#EE6492",
      "iconColour": "#EE6492"
    },
    "@feature": {
      "gutterIcon": true,
      "icon": "flame",
      "background": "#64D5EE",
      "iconColour": "#64D5EE"
    }
  }
}

{
    "files.exclude": {
        "**/.old/**": true,
        // "**/node_modules/**": true,
        "**/vendor": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.cjs": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "files.associations": {
        "*.riot": "html",
        "*.css": "postcss"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll.eslint": "never"
    }
}

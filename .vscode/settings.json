{
    "files.exclude": {
        "**/sugar/js/**": true,
        "**/sugar/node/**": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "**/sugar/src/node/_js": true
    },
    // Default (format when you paste)
    "editor.formatOnPaste": true,
    // Default (format when you save)
    "editor.formatOnSave": true,
}

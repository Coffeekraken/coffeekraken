{
  "files.exclude": {
    "**/sugar/js/**": true,
    "**/sugar/node/**": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Default (format when you paste)
  "editor.formatOnPaste": true,
  // Default (format when you save)
  "editor.formatOnSave": true,
  "todo-tree.general.enableFileWatcher": true,
  "todo-tree.general.tags": [
    "@todo",
    "@fixme",
    "@fix",
    "@feature",
    "@stable",
    "@beta",
    "@alpha",
    "@wip"
  ],
  "todo-tree.filtering.includeGlobs": [
    "**/src/**/*.ts"
  ],
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules",
    "**/.vscode",
    "**/.github"
  ],
  "todo-tree.regex.regex": "((\\*|//|#|<!--|;|/\\*)\\s*($TAGS))",
  "todo-tree.filtering.useBuiltInExcludes": true,
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "white",
    "icon": "check",
    "type": "tag",
    "borderRadius": "0",
    "rulerLane": "full",
  },
  "todo-tree.highlights.customHighlight": {
    "@stable": {
      "hideFromTree": true,
      "background": "#92B75E",
      "iconColour": "#92B75E"
    },
    "@todo": {
      "background": "#FDBC3E",
      "iconColour": "#FDBC3E"
    },
    "@fixme": {
      "background": "#EE6492",
      "iconColour": "#EE6492"
    },
    "@fix": {
      "background": "#EE6492",
      "iconColour": "#EE6492"
    },
    "@feature": {
      "background": "#64D5EE",
      "iconColour": "#64D5EE"
    }
  }

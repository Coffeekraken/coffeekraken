{
    "files.exclude": {
        "**/node_modules/**": true,
        "**/vendor": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.cjs": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "files.associations": {
        "*.riot": "html",
        "*.css": "postcss"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll.eslint": false
    }
}

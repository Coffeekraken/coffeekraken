{
  "name": "coffeekraken",
  "version": "1.0.0",
  "description": "We are a young collectve of front-end creative developers with one goal in mind. Build tools to make every team working day life better",
  "scripts": {
    "dev": "concurrently -n js,node,shared \"npm run dev.js\" \"npm run dev.node\" \"npm run dev.shared\"",
    "dev.js": "tsc -p .tsconfig/tsconfig.js.json --watch",
    "dev.node": "tsc -p .tsconfig/tsconfig.node.json --watch",
    "dev.shared": "tsc -p .tsconfig/tsconfig.shared.json",
    "container": "docker exec --workdir /workspaces/coffeekraken -it coffeekraken /bin/bash"
  },
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "pre-commit": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Coffeekraken/coffeekraken.git"
  },
  "keywords": [
    "coffee",
    "kraken",
    "coffeekraken"
  ],
  "author": "Coffeekraken <hello@coffeekraken.io>",
  "contributors": [
    {
      "name": "Olivier Bossel",
      "email": "olivier.bossel@gmail.com",
      "url": "http://olivierbossel.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Coffeekraken/coffeekraken/issues"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  },
  "homepage": "https://github.com/Coffeekraken/coffeekraken#readme",
  "dependencies": {
    "dependency-check": "^4.1.0",
    "typescript-esm": "^2.0.0"
  },
  "globalDependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "jest": "^26.0.0",
    "jest-localstorage-mock": "^2.4.8",
    "jest-puppeteer": "^4.4.0",
    "jest-useragent-mock": "^0.1.1",
    "lerna": "^4.0.0",
    "ts-loader": "^8.1.0",
    "ts-migrate": "^0.1.16",
    "typescript": "^4.2.3"
  }
}

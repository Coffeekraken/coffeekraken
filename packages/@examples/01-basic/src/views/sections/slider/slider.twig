<section class="section-slider {{ __spacesClasses(spaces, frontspec) }}" s-specs="views.sections.slider">
    {{ __specsValuesTemplate(_context)|raw }}
    
    <div class="s-container">
        <s-slider controls loop>
            {% for slide in slides %}
                <div s-slider-slide>
                    <div class="s-slider_media-container s-media-container">
                        <img class="s-slider_media s-media s-media--img" src="{{ slide.image.url }}" />
                    </div>
                </div>
            {% endfor %}
        </s-slider>
    </div>
</section>
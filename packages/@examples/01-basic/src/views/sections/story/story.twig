<section class="section-story" layout="{{ layout }}" s-appear in="bottom" delay="500">
    <div class="s-container">
        <div class="s-layout:{{ layout }} @mobile s-layout:1_2">
            <div>
                <h1 class="s-typo:h2 s-mbe:40">
                    {{ title|raw }}
                </h1>
                <p class="s-typo:p">
                    {{ text|raw }}
                </p>
                <a class="s-btn s-mbs:40 s-color:accent" href="{{ cta.link.url }}" target="{{ cta.link.target }}">
                    {{ cta.label }}
                </a>
            </div>
            <div>
                {% if image %}
                    <img class="__img" src="{{ image.url }}" alt="{{ image.alt }}" title="{{ image.title }}" />
                {% endif %}
            </div>
        </div>
    </div>
</section>
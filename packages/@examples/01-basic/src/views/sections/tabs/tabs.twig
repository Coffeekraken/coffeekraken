<section class="section-tabs">
    <div class="s-container">
        <div class="__layout">
            <div>
                <div class="__tabs">
                    {% for tab in tabs %}
                        <a class="__tabs-item" href="#{{ tab.id }}" s-activate group="tabs">
                            {{ tab.title }}
                        </a>
                    {% endfor %}
                </div>
            </div>

            <div>

                {% for tab in tabs %}
                    <div class="__content" id="{{ tab.id }}">
                        <h1 class="s-typo:h3 s-mbe:30">{{ tab.title|raw }}</h1>
                        <p class="s-typo:lead s-mbe:20 s-tc:accent">{{ tab.intro|raw }}</p>
                        <p class="s-typo:p">{{ tab.text|raw }}</p>
                        <a class="s-btn s-mbs:40 s-color:accent" href="{{ tab.cta.link.url }}" target="{{ tab.cta.link.target }}">
                            {{ tab.cta.label }}
                        </a>
                    </div>
                {% endfor %}

            </div>

        </div>
    </div>
</section>
<section class="section-separator" s-appear in="bottom" delay="400">
    <div class="__bkg">
        {% if image %}
            <img class="__img" src="{{ image.url }}" alt="{{ image.alt }}" />
        {% endif %}
    </div>
    <div class="__content">
        <div class="s-container">
            {% if title %}
                <h1 class="s-typo:h2">
                    {{ title|raw }}
                </h1>
            {% endif %}
        </div>
    </div>
</section>
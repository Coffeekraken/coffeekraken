RewriteEngine On

RewriteCond %{REQUEST_URI}  ^\/api\/[^.]+$|\.(?!(json)$)([^.]+$)\/   [NC]
RewriteRule ^api/(.*)/$  /api/$1.json         [R=301,L]

RewriteCond %{REQUEST_URI}  ^\/api\/[^.]+$|\.(?!(json)$)([^.]+$)   [NC]
RewriteRule ^api/(.*)$  /api/$1.json         [R=301,L]

<FilesMatch "\.(jpg|jpeg|png|webp|webm|gif|svg|css|js|woff|woff2|eot|ico)$">
  <IfModule mod_headers.c></IfModule>
    Header set Cache-Control "max-age=31536000"
  </IfModule>
</FilesMatch>
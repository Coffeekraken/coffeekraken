{
  "config": {
    "local": {
      "js": {
        "compile": {
          "bundle": true
        }
      }
    },
    "folders": [
      {
        "scope": "default",
        "path": "./src/config"
      }
    ]
  },
  "cli": [
    {
      "stack": "frontstack",
      "description": "Sugar Frontstack application that allows you to develop quickly and efficiently",
      "actions": {
        "start": {
          "description": "Start the frontstack application into the current working directory",
          "process": "./src/node/start/start.cli.js"
        },
        "vite": {
          "description": "Start the vite development stack",
          "process": "./src/node/vite/vite.cli.js"
        }
      }
    }
  ]
}

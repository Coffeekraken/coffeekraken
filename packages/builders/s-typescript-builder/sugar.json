{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%format/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "ts",
            "description": "Typescript (js) related actions",
            "defaultAction": "build",
            "actions": {
                "build": {
                    "scope": "global",
                    "description": "Build the ts and js files found in the repository",
                    "interface": "./dist/pkg/esm/node/interface/STypescriptBuilderBuildParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/build.cli.js"
                }
            }
        }
    ]
}
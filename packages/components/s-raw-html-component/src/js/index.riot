<s-raw-html>
  <script>
    import __SComponentUtils from '@coffeekraken/s-component-utils';

    export default {
      onBeforeMount() {
        this.component = new __SComponentUtils(this.root, {});
      },
      setInnerHTML() {
        this.root.innerHTML = this.component.decodeHtml(this.props.html);
      },
      onMounted() {
        this.setInnerHTML();
      },
      onUpdated() {
        this.setInnerHTML();
      }
    };
  </script>
</s-raw-html>

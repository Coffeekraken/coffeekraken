{
    "config": {
        "folders": [
            {
                "scope": "default",
                "path": "./src/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "new",
            "description": "Sugar new action",
            "defaultAction": "project",
            "actions": {
                "project": {
                    "scope": "global",
                    "description": "Init a new project",
                    "command": "sugar frontstack.new"
                }
            }
        },
        {
            "stack": "dev",
            "description": "Sugar development stack actions",
            "defaultAction": "start",
            "actions": {
                "start": {
                    "scope": "global",
                    "description": "Start the development stack",
                    "command": "sugar frontstack.recipe dev"
                }
            }
        },
        {
            "stack": "prod",
            "description": "Sugar production testing stack actions",
            "defaultAction": "start",
            "actions": {
                "start": {
                    "scope": "global",
                    "description": "Start the production testing stack",
                    "command": "sugar frontstack.recipe prod"
                }
            }
        },
        {
            "stack": "build",
            "description": "Sugar build action",
            "defaultAction": "prod",
            "actions": {
                "prod": {
                    "scope": "global",
                    "description": "Build for production",
                    "command": "sugar frontstack.recipe build"
                }
            }
        },
        {
            "stack": "fs",
            "description": "Filesystem related actions",
            "defaultAction": "copy",
            "actions": {
                "copy": {
                    "scope": "global",
                    "description": "Copy a file/directory to a specified destination",
                    "interface": "./src/node/fs/interface/SCliFsCopyParamsInterface.js",
                    "process": "./src/cli/fs/copy.cli.js"
                }
            }
        },
        {
            "stack": "package",
            "description": "Package related actions",
            "defaultAction": "rename",
            "actions": {
                "rename": {
                    "scope": "global",
                    "description": "Rename a package (folder, package.json, etc...",
                    "interface": "./src/node/package/interface/SCliPackageRenameParamsInterface.js",
                    "process": "./src/cli/package/rename.cli.js"
                }
            }
        },
        {
            "stack": "process",
            "description": "Process related actions",
            "interactive": {
                "project": {
                    "scope": "global",
                    "title": "Kill a process",
                    "description": "Allows you to kill particular process through parameters like the port on which it runs, etc...",
                    "interface": "./src/cli/process/interface/SSugarCliProcessKillParamsInterface.js",
                    "process": "./src/cli/process/interactiveKill.cli.js"
                }
            },
            "defaultAction": "kill",
            "actions": {
                "kill": {
                    "scope": "global",
                    "description": "Kill a process by it's pid, port and more",
                    "interface": "./src/cli/process/interface/SSugarCliProcessKillParamsInterface.js",
                    "process": "./src/cli/process/kill.cli.js"
                }
            }
        }
    ]
}

{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%moduleSystem/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "docmap",
            "description": "SDocMap CLI",
            "defaultAction": "build",
            "actions": {
                "build": {
                    "description": "Build the docmap.json file by searching for source files with a @namespace defined",
                    "process": "./dist/pkg/esm/cli/build.cli.js",
                    "interface": "./dist/pkg/esm/node/interface/SDocmapBuildParamsInterface.js"
                },
                "read": {
                    "description": "Get a special docmap entry",
                    "process": "./dist/pkg/esm/cli/read.cli.js"
                }
            }
        }
    ]
}
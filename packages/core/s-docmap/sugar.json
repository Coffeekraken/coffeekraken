{
  "config": {
    "folders": [
      {
        "path": "./src/config",
        "scope": "default"
      }
    ]
  },
  "cli": [
    {
      "stack": "docmap",
      "description": "SDocMap CLI",
      "actions": {
        "build": {
          "description": "Build the docmap.json file by searching for source files with a @namespace defined",
          "process": "./src/cli/build.cli.js"
        },
        "read": {
          "description": "Get a special docmap entry",
          "process": "./src/cli/read.cli.js"
        },
        "snapshot": {
          "description": "Build a snapshot",
          "process": "./src/cli/snapshot.cli.js"
        },
        "installSnapshot": {
          "description": "Install snapshot(s) to make them workable",
          "process": "./src/cli/installSnapshot.cli.js"
        }
      }
    }
  ]
}

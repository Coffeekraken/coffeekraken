{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%moduleSystem/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "monorepo",
            "description": "Mono repository related actions",
            "defaultAction": "list",
            "actions": {
                "run": {
                    "scope": "global",
                    "description": "Run a command in all the packages of the monorepo",
                    "interface": "./dist/pkg/esm/node/interface/SMonorepoRunParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/run.cli.js"
                },
                "list": {
                    "scope": "global",
                    "description": "List all the repositories that compose the current mono repo",
                    "interface": "./dist/pkg/esm/node/interface/SMonorepoListParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/list.cli.js"
                },
                "dev": {
                    "scope": "global",
                    "description": "Launch the monorepo dev stack. Principally transpiling the packages typescript files",
                    "interface": "./dist/pkg/esm/node/interface/SMonorepoDevParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/dev.cli.js"
                },
                "upgrade": {
                    "scope": "global",
                    "description": "Upgrade the repositories informations depending on the mono repo ones",
                    "interface": "./dist/pkg/esm/node/interface/SCliMonoUpgradeParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/upgrade.cli.js"
                }
            }
        }
    ]
}
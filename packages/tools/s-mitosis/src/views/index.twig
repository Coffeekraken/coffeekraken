    <script defer src="/dist/js/index.esm.js" type="module"></script>
    <link rel="stylesheet" href="/dist/css/index.css" />

</head>
<body>
    <div class="s-tabs">
        {% for component in components %}
            <div class="s-tabs__item" s-activate href="#{{ component.target }}" group="tabs">
                {{ component.target }}
            </div>
        {% endfor %}
    </div>

    {% for component in components %}
        <div class="content" id="{{ component.target }}">
            <template>
                <div id="app-{{ component.target }}" component="{{ component|json_encode }}">
                    {{ component.target }}

                    <{{ component.tagName }}>
                        
                    </{{ component.tagName }}>

                </div>
            </template>
        </div>
    {% endfor %}
</body>
</html>

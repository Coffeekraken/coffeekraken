{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%moduleSystem/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "mitosis",
            "description": "SMitosis CLI",
            "defaultAction": "start",
            "actions": {
                "start": {
                    "scope": "package",
                    "description": "Start a mitosis environment and build with ease multi-frameworks compatible components.",
                    "process": "./dist/pkg/esm/cli/start.cli.js",
                    "interface": "./dist/pkg/esm/node/interface/SMitosisStartParamsInterface.js"
                },
                "build": {
                    "scope": "package",
                    "description": "Build the your mitosis components using the mitosis.config.js file at the root of your package. Add the ability to watch for files changes and rebuild automatically your components.",
                    "process": "./dist/pkg/esm/cli/build.cli.js",
                    "interface": "./dist/pkg/esm/node/interface/SMitosisBuildParamsInterface.js"
                }
            }
        }
    ]
}
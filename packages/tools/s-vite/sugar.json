{
  "config": {
    "folders": [
      {
        "path": "./dist/pkg/%format/config"
      }
    ]
  },
  "cli": [
    {
      "stack": "vite",
      "description": "Sugar vite wrapper",
      "defaultAction": "start",
      "actions": {
        "start": {
          "description": "Start the vite server and compilators development stack",
          "process": "./src/cli/start.cli.js"
        },
        "build": {
          "description": "Build your assets like js, and css using vite",
          "process": "./src/cli/build.cli.js"
        }
      }
    }
  ]
}
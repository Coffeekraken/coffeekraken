{{#if author}}{{#author}}
<div class="{{ classname 'db-author' }}">
  <h3 class="{{ classname 'h3 m-t m-b-small' }}">
    Author
  </h3>
  <span class="{{ classname 'db-name' }}">{{name}}</span>
  {{#if email}}
    <a class="{{ classname 'db-email' }}" href="mailto:{{email}}">
      {{email}}
    </a>
  {{/if}}
  {{#if url}}
    <a class="{{ classname 'db-url' }}" href="{{url}}" target="_blank">
      {{url}}
    </a>
  {{/if}}
</div>
{{/author}}{{/if}}

{{#if author}}{{#author}}
<div class="{{ classname 'db-tag-author' }}">
  <h3 class="{{ classname 'h3 mar-t mar-b-30' }}">
    Author
  </h3>
  <span class="{{ classname 'db-tag-name' }}">{{name}}</span>
  {{#if email}}
    <a class="{{ classname 'db-tag-email' }}" href="mailto:{{email}}">
      {{email}}
    </a>
  {{/if}}
  {{#if url}}
    <a class="{{ classname 'db-tag-url' }}" href="{{url}}" target="_blank">
      {{url}}
    </a>
  {{/if}}
</div>
{{/author}}{{/if}}

{
    "type": "Bare",
    "title": "Layout",
    "description": "Allows you to display a layout section driven by the layout string notaiton like \"1 1 2 _ 3 3 2\"",
    "props": {
        "frontspec": {
            "type": "Object",
            "description": "The frontspec.json that you must have at your project root",
            "required": true
        },
        "id": {
            "type": "Text",
            "description": "Specify a uniqid to apply to the layout"
        },
        "layout": {
            "type": "Text{}",
            "description": "Specify the layout you want in layout string notation by media (mobile, etc...). Default layout must be stored under the \"default\" media",
            "required": true,
            "responsive": true,
            "examples": {
                "js": {
                    "code": [
                        "const viewData = {",
                        "   // other view data...",
                        "   layout: {",
                        "       desktop: '1 2 _ 3 4',",
                        "       mobile: '1 _ 2 _ 3 _ 4'",
                        "   }",
                        "};"
                    ]
                }
            }
        },
        "html": {
            "type": "Html",
            "description": "The grid html to print. Must have the same count of div(s) as your layout cells",
            "required": true
        },
        "gap": "@sugar.views.props.spacing",
        "attributes": "@sugar.views.props.attributes",
        "spaces": "@sugar.views.props.spaces"
    },
    "examples": {
        "twig": {
            "title": "Twig",
            "description": "Here's a twig sample of how to use the layout view",
            "code": [
                "{% include 'sugar.bare.layout.layout' with {",
                "   layout: {",
                "       desktop: '1 2 _ 3 4',",
                "       mobile: '1 _ 2 _ 3 _ 4'",
                "   },",
                "   html: '",
                "       <div>Hello world #1</div>",
                "       <div>Hello world #2</div>",
                "       <div>Hello world #3</div>",
                "       <div>Hello world #4</div>",
                "   '",
                "} %}"
            ]
        }
    }
}

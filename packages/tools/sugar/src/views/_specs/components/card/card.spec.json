{
    "type": "Component",
    "title": "Card",
    "description": "Display a nice card with some infos like \"image\", \"title\", \"intro\", \"description\" and \"cta\"",
    "props": {
        "image": "@sugar.views.props.image",
        "title": {
            "type": "Text",
            "description": "The card title"
        },
        "intro": {
            "type": "Text",
            "description": "The card intro"
        },
        "text": {
            "type": "Text",
            "description": "The card text"
        },
        "direction": {
            "type": "Select",
            "description": "Specify the direction of the card. Horizontal, vertical, etc...",
            "options": [
                {
                    "name": "Vertical",
                    "value": "vertical"
                },
                {
                    "name": "Horizontal",
                    "value": "horizontal"
                },
                {
                    "name": "Vertical reversed",
                    "value": "vertical-reverse"
                },
                {
                    "name": "Horizontal reversed",
                    "value": "horizontal-reverse"
                }
            ]
        },
        "spacing": "@sugar.views.props.spacing",
        "color": "@sugar.views.props.color",
        "cta": "@sugar.views.components.cta",
        "attributes": "@sugar.views.props.attributes"
    }
}

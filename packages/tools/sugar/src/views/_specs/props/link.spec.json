{
    "type": "Link",
    "title": "Link",
    "description": "Describe a link with props like \"url\", \"target\", etc...",
    "props": {
        "text": {
            "type": "Text",
            "description": "Specify the text of the link",
            "required": true
        },
        "url": {
            "type": "Text",
            "description": "Specify the url of the link",
            "required": true
        },
        "target": {
            "type": "Select",
            "description": "Specify the target of the link",
            "options": [
                {
                    "name": "Same window (tab)",
                    "value": "__self"
                },
                {
                    "name": "New window (tab)",
                    "value": "__blank"
                }
            ],
            "default": "__self"
        },
        "title": {
            "type": "Text",
            "description": "Specify a title to be used on the link"
        }
    }
}

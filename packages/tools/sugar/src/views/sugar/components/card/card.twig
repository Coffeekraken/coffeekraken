<div id="{{ id }}" class="s-card {{ attributes.class }} {{ direction.value ? 's-card--' ~ direction.value : '' }} {{ __spacesClasses(spaces, frontspec) }}" {{ __attrs(attributes, ['class'])|raw }}
>
{{ __nodeDataTemplate('views.components.card', _context)|raw }}

    {% if image and image.url %}
        <div class="_media s-media-container">
            <img class="_img s-media" src="{{ image.url }}" alt="{{ image.alt }}" title="{{ image.title }}" />
        </div>
    {% endif %}

    <div class="_content s-spacing:{{ spacing.value ? spacing.value : '30' }}">
        {% if title %}
            <h1 class="_title s-typo:h2">{{ title|raw }}</h1>
        {% endif %}
        {% if intro %}
            <p class="_lead s-typo:lead s-tc:{{ color.value ? color.value : 'accent' }}">{{ intro|raw }}</p>
        {% endif %}
        {% if text %}
            <p class="_text s-typo:p">{{ text|raw }}</p>
        {% endif %}
        {% if primaryCta or secondaryCta %}
            <div class="_ctas">
                {% if primaryCta %}
                    {% set override = {} %}
                    {% if color.value and not primaryCta.color.value %}
                        {% set override = {
                            color: color
                        } %}
                    {% endif %}
                    {% include 'sugar/components/cta/cta.twig' with primaryCta|merge(override) only %}
                {% endif %}
                {% if secondaryCta %}
                    {% set override = {} %}
                    {% if color.value and not secondaryCta.color.value %}
                        {% set override = {
                            color: color
                        } %}
                    {% endif %}
                    {% include 'sugar/components/cta/cta.twig' with secondaryCta|merge(override) only %}
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
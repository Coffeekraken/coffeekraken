<form id="{{ id.value }}" action="{{ action }}" class="s-form {% if lnf.color %} s-color:{{ lnf.color }} {% endif %} s-spacing:{{ lnf.spacing ? lnf.spacing : '20' }}">
    {% for field in fields %}
        <div class="s-form_field">
            
            {% if field.type == 'text' %}
                <label class="s-form_label s-label:{{ lnf.labelType ? lnf.labelType : 'default' }}:responsive" s-form-validate {{ __attrs(field.validations)|raw }}>
                    <input class="s-form_text s-input" {{ field.attributes.class }} {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" type="text" name="{{ field.name }}" />
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

            {% if field.type == 'textarea' %}
                <label class="s-form_label s-label:{{ lnf.labelType ? lnf.labelType : 'default' }}:responsive" s-form-validate {{ __attrs(field.validations)|raw }}>
                    <textarea class="s-form_textarea s-input {{ field.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" name="{{ field.name }}"></textarea>
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

        </div>
    {% endfor %}

    {% if actions %}
        <div class="s-form_actions s-spacing:{{ lnf.spacing ? lnf.spacing : '20' }}:column" style="flex-direction: row-reverse">
            {% for action in actions %}
                <button class="s-form_action s-btn s-color:{{ lnf.color }} {{ action.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} type="{{ action.type }}">
                    {{ action.label }}
                </button>
            {% endfor %}
        </div>
    {% endif %}

</form>
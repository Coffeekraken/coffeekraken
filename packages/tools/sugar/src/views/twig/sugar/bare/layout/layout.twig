
{% set finalId = id %}
{% if not id  %}
    {% set finalId = 's-layout-' ~ uniqid() %}
{% endif %}
<style>

{% for media, lay in layout|toArray %}
    {{ layoutCss(lay, {
        selector: '#' ~ finalId ~ '-layout',
        media: media,
        mediaSettings: frontspec.media
    })|raw }}
{% endfor %}
</style>

<div id="{{ finalId }}" class="{{ attributes.class }}" {{ attrs(attributes, ['class'])|raw }}>
    {% if container %}
        <div class="s-container:{{ container }}">
    {% endif %}
    <div class="s-layout" id="{{ finalId }}-layout">
        {{ content|raw }}
    </div>
    {% if container %}
    </div>
    {% endif %}
</div>
<div class="s-card {{ attributes.class }} {{ direction ? 's-card--' ~ direction : '' }}" {{ attrs(attributes, ['class'])|raw }}
    s-carpenter="components.card"
>

    {% if image %}
        <div class="s-card__img-container">
            <img class="s-card__img" src="{{ image.url }}" alt="{{Â image.alt }}" title="{{ image.title }}" />
        </div>
    {% endif %}

    <div class="s-card__content s-spacing:{{ spacing ? spacing : '30' }}">
        {% if title %}
            <h1 class="s-card__title s-typo:h3" s-carpenter-editable="title">{{ title|raw }}</h1>
        {% endif %}
        {% if intro %}
            <p class="s-card__lead s-typo:lead s-tc:{{ color ? color : 'accent' }}" s-carpenter-editable="intro">{{ intro|raw }}</p>
        {% endif %}
        {% if text %}
            <p class="s-card__text s-typo:p" s-carpenter-editable="text">{{ text|raw }}</p>
        {% endif %}
        {% if cta %}
            <div class="s-card__cta">
                {% set override = {} %}
                {% if color and not cta.color %}
                    {% set override = {
                        color: color
                    } %}
                {% endif %}
                {% include 'sugar/components/cta/cta.twig' with cta|merge(override) only %}
            </div>
        {% endif %}
    </div>
</div>
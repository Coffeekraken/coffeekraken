<div id="{{ id.value }}" s-specs="views.components.card"
    class="s-card {{ attributes.class }} {{ direction.value ? 's-card--' ~ direction.value : '' }} {{ __spacesClasses(spaces, frontspec) }}" {{ __attrs(attributes, ['class'])|raw }}
>
{{ __specsDataTemplate(_context)|raw }}

    {% if image and image.url %}
        <div class="s-card_media s-media-container">
            <img class="s-card_img s-media" src="{{ image.url }}" alt="{{ image.alt }}" title="{{ image.title }}" />
        </div>
    {% endif %}

    <div class="s-card_content s-spacing:{{ spacing.value ? spacing.value : '30' }}">
        {% if title.value %}
            <h1 class="s-card_title s-typo:h3">{{ title.value|raw }}</h1>
        {% endif %}
        {% if intro.value %}
            <p class="s-card_lead s-typo:lead s-tc:{{ color.value ? color.value : 'accent' }}">{{ intro.value|raw }}</p>
        {% endif %}
        {% if text.value %}
            <p class="s-card_text s-typo:p">{{ text.value|raw }}</p>
        {% endif %}
        {% if cta %}
            <div class="s-card_cta">
                {% set override = {} %}
                {% if color.value and not cta.color.value %}
                    {% set override = {
                        color: color
                    } %}
                {% endif %}
                {% include 'sugar/components/cta/cta.twig' with cta|merge(override) only %}
            </div>
        {% endif %}
    </div>
</div>
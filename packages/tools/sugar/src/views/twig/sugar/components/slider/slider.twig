<div class="{{ attributes.class }} {{ container ? 's-container:' ~ container : '' }} {{ __marginClasses(margin, frontspec) }} {{ __paddingClasses(padding, frontspec) }}"
    {{ __attrs(attributes, ['class'])|raw }} s-specs="views.components.slider">
    
    {{ __specsValuesTemplate(_context)|raw }}

<s-slider 
    class="{{ ratio ? 's-ratio--' ~ ratio|replace('/','-') : '' }}"
    direction="{{ direction ? direction : 'horizontal' }}"
    {{ lnf ? 'lnf=' ~ lnf : '' }}
    {{ behavior ? 'behavior=' ~ behavior : '' }}
    pad="{{ pad ? 'true' : 'false' }}"
    {{ controls ? 'controls' : '' }}
    {{ nav ? 'nav' : '' }}
    {{ swipe ? 'swipe' : '' }}
    {{ mousewheel ? 'mousewheel' : '' }}
    {{ clickOnSlide ? 'click-on-slide' : '' }}
    {{ loop ? 'loop' : '' }}
    {{ slide ? 'slide=' ~ slide : '' }}
    {{ progress ? 'progress' : '' }}
    {{ timer ? 'timer=' ~ timer : '' }}
    {{ autoplay ? 'autoplay' : '' }}
    {{ uiContainer ? 'ui-container' : '' }}
>
    {% if slides and slides|length > 0 %}
        {% for slide in slides %}
            <div s-slider-slide>
                {{ slide|raw }}
            </div>
        {% endfor %}
    {% else %}
        {{ html|raw }}
    {% endif %}

</s-slider>

</div>
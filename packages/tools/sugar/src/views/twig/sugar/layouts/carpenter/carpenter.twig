{% extends 'sugar/layouts/main/main.twig' %}

{% block title %}
    Coffeekraken Carpenter
{% endblock %}

{% block body %}

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        body:has(s-carpenter) .s-carpenter_body {
            opacity: 0;
        }
    </style>
    <div class="s-carpenter_body">
        {{ body|raw }}
    </div>

    <s-carpenter id="carpenter" auto-init auto-edit sidebar features='{"save":true,"delete":false}'></s-carpenter>

{% endblock %}

{% if not sections or 'header' in sections|keys %}
    <!-- header -->
    # {{ packageJson.name }}

    ###### [{{ packageJson.license }}](./license) {{ packageJson.version }} - [Git repository]({{ git.repo.url }})

    {% if config.readme.shields %}
        <!-- shields -->
        {% for key, shield in config.readme.shields %}
        [![{{ key }}]({{ shield.url|replace('%packageName',  packageJson.name) }})]({{ shield.href|replace('%packageName', packageJson.name) }})
        {% endfor %}
    {% endif %}
{% endif %}


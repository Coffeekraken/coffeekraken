{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%moduleSystem/config"
            }
        ]
    },
    "postcss": {
        "folders": {
          "mixins": [
            {
              "path": "./dist/pkg/%moduleSystem/node/postcss/mixins"
            }
          ]
        }
      },
    "cli": [
        {
            "stack": "command",
            "description": "Allows you to run commands easily even in multiple packages at once",
            "defaultAction": "command",
            "actions": {
                "run": {
                    "scope": "global",
                    "description": "Run a line command either in current directory or in a(some) specific packages",
                    "interface": "./dist/pkg/esm/cli/interface/SRunCommandParamsInterface.js",
                    "process": "./dist/pkg/esm/cli/runCommand.cli.js"
                }
            }
        }
    ]
}
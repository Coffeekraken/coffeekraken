{
    "config": {
        "folders": [
            {
                "path": "./dist/pkg/%format/config"
            }
        ]
    },
    "cli": [
        {
            "stack": "command",
            "description": "Allows you to run commands easily even in multiple packages at once",
            "defaultAction": "command",
            "actions": {
                "run": {
                    "scope": "global",
                    "description": "Run a line command either in current directory or in a(some) specific packages",
                    "process": "./dist/pkg/esm/cli/runCommand.cli.js"
                }
            }
        },
        {
            "stack": "toolkit",
            "description": "Actions related to the sugar toolkit",
            "defaultAction": "add",
            "actions": {
                "add": {
                    "scope": "global",
                    "description": "Add the sugar toolkit to your project",
                    "process": "./dist/pkg/esm/cli/add.cli.js"
                }
            }
        }
    ]
}
<div id="{{ id }}" class="s-card {{ attributes.class }} {{ direction.value ? 's-card--' ~ direction.value : '' }} {{ __spacesClasses(spaces, frontspec) }}" {{ __attrs(attributes, ['class'])|raw }}
>
{{ __nodeDataTemplate('views.components.card', _context)|raw }}

    {% if image and image.url %}
        <div class="_media s-media-container">
            <img class="_img s-media" src="{{ image.url }}" alt="{{ image.alt }}" title="{{ image.title }}" />
        </div>
    {% endif %}

    <div class="_content {{ __spacingClasses(spacing, 30) }}">
        {% if title %}
            <h1 class="_title s-typo s-typo-h4">{{ title|raw }}</h1>
        {% endif %}
        {% if intro %}
            <p class="_lead s-typo s-typo-lead">{{ intro|raw }}</p>
        {% endif %}
        {% if text %}
            <p class="_text s-typo s-typo-p">{{ text|raw }}</p>
        {% endif %}
        <div class="_spacer"></div>
        {% if primaryCta or secondaryCta %}
            <div class="_ctas">
                {% if primaryCta %}
                    {% include 'sugar/components/cta/cta.twig' with primaryCta only %}
                {% endif %}
                {% if secondaryCta %}
                    {% include 'sugar/components/cta/cta.twig' with secondaryCta only %}
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
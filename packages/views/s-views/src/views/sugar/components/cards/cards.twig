<section id="{{ id }}" class="s-cards s-cards-{{ cards|length }}
    {{ __classes({
        container: container,
        spaces: spaces
    }) }} 
    {{ attributes.class }}
    {{ additionalClasses }}
" {{ __attrs(attributes, ['class'])|raw }}>
{{ __nodeDataTemplate('views.components.cards', _context)|raw }}
    <div class="_grid {{ __gapClasses(gap, 30) }}">
        {% for idx, card in cards %}
            <div class="_card">
                {% if card is iterable %}
                    {% include 'sugar/components/card/card.twig' with card only %}
                {% else %}
                    {{ card|raw }}
                {% endif %}
            </div>
        {% endfor %}
    </div>

</section>
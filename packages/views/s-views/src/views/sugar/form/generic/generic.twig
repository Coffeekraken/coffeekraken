<form id="{{ id }}" action="{{ action }}" method="{{ method.value }}" class="s-form s-form-generic
    {{ __classes({
        spacing: [spacing, 30],
        spaces: spaces
    }) }}
    {{ attributes.class }}
    {{ additionalClasses }}
" {% if ajax %} s-ajax {% endif %}>
    {{ __nodeDataTemplate('views.form.generic', _context)|raw }}

    {% for field in fields %}
        <div class="s-form_field">
            
            {% if field.type == 'text' %}
                <label class="s-form_label s-label s-label-{{ lnf.labelType ? lnf.labelType : 'default' }}" s-form-validate {{ __attrs(field.rules)|raw }}>
                    <input class="s-form_text s-input {{ field.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" type="text" name="{{ field.name }}" value="{{ field.value }}" />
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

            {% if field.type == 'textarea' %}
                <label class="s-form_label s-label s-label-{{ lnf.labelType ? lnf.labelType : 'default' }}" s-form-validate {{ __attrs(field.rules)|raw }}>
                    <textarea class="s-form_textarea s-input {{ field.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" name="{{ field.name }}">{{ field.value }}</textarea>
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

            {% if field.type == 'hidden' %}
                <input type="hidden" {{ __attrs(field.attributes, ['class'])|raw }} name="{{ field.name }}" value="{{ field.value }}" />
            {% endif %}

        </div>
    {% endfor %}

    {% if actions %}
        <div class="s-form_actions">
            {% for action in actions %}
                <button class="s-form_action s-btn
                    {% if action.lnf %} {{ 's-btn-' ~ (action.lnf.value ? action.lnf.value : action.lnf) }} {% endif %}
                    {{ __classes({
                        color: action.color
                    }) }}
                    {{ action.attributes.class }}
                    {{ action.additionalClasses }}
                " {{ __attrs(action.attributes, ['class'])|raw }} type="{{ action.type }}">
                    {{ action.label }}
                </button>
            {% endfor %}
        </div>
    {% endif %}

</form>
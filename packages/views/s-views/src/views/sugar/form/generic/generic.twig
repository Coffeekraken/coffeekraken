<form id="{{ id }}" action="{{ action }}" class="s-form s-form-generic {{ __spacingClasses(spacing, 30) }}">
    {% for field in fields %}
        <div class="s-form_field">
            
            {% if field.type == 'text' %}
                <label class="s-form_label s-label s-label-{{ lnf.labelType ? lnf.labelType : 'default' }}" s-form-validate {{ __attrs(field.rules)|raw }}>
                    <input class="s-form_text s-input {{ field.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" type="text" name="{{ field.name }}" />
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

            {% if field.type == 'textarea' %}
                <label class="s-form_label s-label s-label-{{ lnf.labelType ? lnf.labelType : 'default' }}" s-form-validate {{ __attrs(field.rules)|raw }}>
                    <textarea class="s-form_textarea s-input {{ field.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} placeholder="{{ field.placeholder ? field.placeholder : field.label }}" name="{{ field.name }}"></textarea>
                    <span>{{ field.label }}</span>
                </label>
            {% endif %}

        </div>
    {% endfor %}

    {% if actions %}
        <div class="s-form_actions">
            {% for action in actions %}
                <button class="s-form_action s-btn {{ action.attributes.class }}" {{ __attrs(field.attributes, ['class'])|raw }} type="{{ action.type }}">
                    {{ action.label }}
                </button>
            {% endfor %}
        </div>
    {% endif %}

</form>
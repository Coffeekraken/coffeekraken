{% set section = {
    type: 'contact',
}|merge(section ?? {}) %}

{% extends 'sugar/sections/simple/simple.twig' %}

{% block simpleContent %}

    <div class="_layout {{ imageSide.value ?? imageSide }}">
        {% if form %}
            <div class="_form">
                {% include 'sugar/form/generic/generic.twig' with form|merge({
                    spacing: form.spacing ?? spacing
                }) only %}
            </div>
        {% endif %}
        {% if address or socials %}
            <div>
                {% if address %}
                    <div class="_address {{ __spacingClasses(spacing, 10) }}">
                        {% if address.title %}
                            <h3 class="s-typo s-typo-h4">{{ address.title }}</h3>
                        {% endif %}
                        {% if address.name %}
                            <p class="s-typo s-typo-p">{{ address.name }}</p>
                        {% endif %}
                        {% if address.street %}
                            <p class="s-typo s-typo-p">{{ address.street }}</p>
                        {% endif %}
                        {% if address.city %}
                            <p class="s-typo s-typo-p">{{ address.city }}</p>
                        {% endif %}
                        {% if address.phone %}
                            <a href="tel: {{ address.phone }}" class="s-typo s-typo-a s-typo-p">{{ address.phone }}</a>
                        {% endif %}
                        {% if  address.email %}
                            <a href="mailto: {{ address.email }}" class="s-typo s-typo-a s-typo-p">{{ address.email }}</a>
                        {% endif %}
                    </div>
                {% endif %}
                {% if socials %}
                    <div class="_socials">
                        {% if socials.facebookUrl %}
                            <a href="{{ socials.facebookUrl }}" title="Facebook" target="_blank">
                                <i class="s-icon s-icon-facebook"></i>
                            </a>
                        {% endif %}
                        {% if socials.twitterUrl %}
                            <a href="{{ socials.twitterUrl }}" title="Twitter" target="_blank">
                                <i class="s-icon s-icon-twitter"></i>
                            </a>
                        {% endif %}
                        {% if socials.instagramUrl %}
                            <a href="{{ socials.instagramUrl }}" title="Instagram" target="_blank">
                                <i class="s-icon s-icon-instagram"></i>
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endif %}
        {% if image %}
            <div>
                <picture class="_image s-media-container">
                    {% for media, image in image.media %}
                        <source srcset="{{ image.url }}" media="{{ media }}">
                    {% endfor %}
                    <img class="_img s-media" src="{{ image.url }}" title="{{ image.title }}" alt="{{ image.alt }}" />
                </picture>
            </div>
        {% endif %}
        {% if map %}
            <div class="_map">
                <div class="s-media-container">
                    <s-google-map class="s-media:map" map-id="7bfb2f702a07e548" lat="46.618038" lng="7.057280" bounds>
                        {% for marker in markers %}
                            <s-google-map-marker lat="{{ marker.lat }}" lng="{{ marker.lng }}" title="{{ name }}" address="{{ street }}" city="{{ city }}">
                                <div class="s-google-map-marker">    
                                    <div class="s-google-map-marker_icon">
                                        <i class="fa-solid fa-location-dot"></i>
                                    </div>
                                </div>
                            </s-google-map-marker>
                        {% endfor %}
                    </s-google-map>
                </div>
            </div>
        {% endif %}
    </div>

{% endblock %}
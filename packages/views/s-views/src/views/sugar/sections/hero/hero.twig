{% set section = {
    type: 'hero'
}|merge(section ?? {}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}
    <div class="_content {{ __spacingClasses(spacing, 30) }}">

        {% if image.url %}
            <picture class="_image s-media-container">
                {% for media, image in image.media %}
                    <source srcset="{{ image.url }}" media="{{ media }}">
                {% endfor %}
                <img class="_img s-media" src="{{ image.url }}" title="{{ image.title }}" alt="{{ image.alt }}" />
            </picture>
        {% endif %}

        {% include 'sugar/components/metas/metas.twig' with {
            titleSize: 1
        } %}

        {% if ctas|length %}
            <div class="_ctas">
                {% for cta in ctas %}
                    <div class="_cta">
                        {% include 'sugar/components/cta/cta.twig' with cta only %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}


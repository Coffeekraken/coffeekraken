{% set section = {
    type: 'hero'
}|merge(section ?? {}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}
    <div class="_content s-spacing:{{ __spacingClasses(spacing, 30) }}">

        {% if image.url %}
            <picture class="_image s-media-container">
                {% for media, image in image.media %}
                    <source srcset="{{ image.url }}" media="{{ media }}">
                {% endfor %}
                <img class="_img s-media" src="{{ image.url }}" title="{{ image.title }}" alt="{{ image.alt }}" />
            </picture>
        {% endif %}

        {% include 'sugar/components/metas/metas.twig' with {
            titleSize: 1
        } %}

        <div class="_ctas">
            {% if primaryCta %}
                <div class="_cta _primary-cta">
                    {% include 'sugar/components/cta/cta.twig' with primaryCta only %}
                </div>
            {% endif %}
            {% if secondaryCta %}
                <div class="_cta _secondary-cta">
                    {% include 'sugar/components/cta/cta.twig' with secondaryCta only %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}


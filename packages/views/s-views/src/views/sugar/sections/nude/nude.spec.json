{
    "type": "Section",
    "category": "sections",
    "title": "Nude section",
    "description": "Render your \"html\" or \"nodes\" inside a nude section",
    "props": {
        "bgColor": {
            "type": "Color",
            "category": "design",
            "title": "Background color",
            "description": "Background color"
        },
        "bgImage": {
            "type": "Image",
            "category": "design",
            "title": "Background image",
            "description": "Background image"
        },
        "html": {
            "type": "Html",
            "description": "Specify the html to render"
        },
        "nodes": {
            "type": "Html[]",
            "description": "Specify some nodes to render"
        },
        "align": {
            "type": "Select",
            "category": "design",
            "title": "Align",
            "description": "Specify the align of the section (top, center, bottom)",
            "options": [
                {
                    "id": "start",
                    "value": "start",
                    "name": "Start"
                },
                {
                    "id": "center",
                    "value": "center",
                    "name": "Center"
                },
                {
                    "id": "end",
                    "value": "end",
                    "name": "End"
                }
            ]
        },
        "justify": {
            "type": "Select",
            "category": "design",
            "title": "Justify",
            "description": "Specify the justify of the section (left, center, right)",
            "options": [
                {
                    "id": "start",
                    "value": "start",
                    "name": "Start"
                },
                {
                    "id": "center",
                    "value": "center",
                    "name": "Center"
                },
                {
                    "id": "end",
                    "value": "end",
                    "name": "End"
                }
            ]
        },
        "variant": {
            "type": "Select",
            "category": "design",
            "title": "Theme variant",
            "description": "Specify a theme variant you want to apply to the section",
            "options": [
                {
                    "id": "light",
                    "value": "light",
                    "name": "Light"
                },
                {
                    "id": "dark",
                    "value": "dark",
                    "name": "Dark"
                }
            ]
        },
        "spacing": "@sugar.views.props.spacing",
        "container": "@sugar.views.props.container",
        "attributes": "@sugar.views.props.attributes",
        "spaces": "@sugar.views.props.spaces"
    },
    "examples": {
        "twig": {
            "title": "Twig",
            "description": "Here's a twig sample of how to use the nude section view",
            "code": [
                "{% include 'sugar.bare.sections.nude' with {",
                "   html: '<div>Some html</div>',",
                "} %}"
            ]
        }
    }
}
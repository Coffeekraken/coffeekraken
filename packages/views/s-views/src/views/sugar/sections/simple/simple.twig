
{% set section = {
    type: 'simple'
}|merge(section ?? {}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}

    {% include 'sugar/components/metas/metas.twig' %}

    {% block simpleContent %}
        <div class="_content">
            {% if nodes %}
                {{ nodes|join()|raw }}
            {% else %}
                {{ html|raw }}
            {% endif %}
        </div>
    {% endblock %}

    {% if primaryCta or secondaryCta %}
        <div class="_ctas">
            {% if primaryCta %}
                <div class="_cta _primary-cta">
                    {% include 'sugar/components/cta/cta.twig' with primaryCta only %}
                </div>
            {% endif %}
            {% if secondaryCta %}
                <div class="_cta _secondary-cta">
                    {% include 'sugar/components/cta/cta.twig' with secondaryCta only %}
                </div>
            {% endif %}
        </div>
    {% endif %}

{% endblock %}

{% set section = {
    type: 'simple'
}|merge(section ?? {}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}

    <div s-container="beforeMetas">
        {{ beforeMetas|raw }}
    </div>

    {% include 'sugar/components/metas/metas.twig' %}

    <div s-container="afterMetas">
        {{ afterMetas|raw }}
    </div>

    <div s-container="beforeContent">
        {{ beforeContent|raw }}
    </div>

    {% block simpleContent %}
        <div class="_content">
            {% if nodes %}
                {{ nodes|join()|raw }}
            {% else %}
                {{ html|raw }}
            {% endif %}
        </div>
    {% endblock %}

    <div s-container="afterContent">
        {{ afterContent|raw }}
    </div>

    <div s-container="beforeCtas">
        {{ beforeCtas|raw }}
    </div>

    {% if ctas|length %}
        <div class="_ctas">
            {% for cta in ctas %}
                <div class="_cta">
                    {% include 'sugar/components/cta/cta.twig' with cta only %}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div s-container="afterCtas">
        {{ afterCtas|raw }}
    </div>

{% endblock %}
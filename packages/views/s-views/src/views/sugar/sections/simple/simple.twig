
{% set section = {
    type: 'simple'
}|merge(section ?? {}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}

    {% include 'sugar/components/metas/metas.twig' %}

    {% block simpleContent %}
        <div class="_content">
            {% if nodes %}
                {{ nodes|join()|raw }}
            {% else %}
                {{ html|raw }}
            {% endif %}
        </div>
    {% endblock %}

    {% if ctas|length %}
        <div class="_ctas">
            {% for cta in ctas %}
                <div class="_cta">
                    {% include 'sugar/components/cta/cta.twig' with cta only %}
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
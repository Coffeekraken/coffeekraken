{% set section = {
    type: 'tile'
}|merge(section ?? {}) %}

{% set attributes = (attributes ?? {})|merge({
    class: attributes.class ?? '' ~ ' s-section-tile-image-side-' ~ (imageSide.value ?? imageSide ?? 'left')
}) %}

{% extends 'sugar/sections/nude/nude.twig' %}

{% block content %}

        <div class="_layout">
            <div>
                <div class="_content {{ __spacingClasses(spacing, 30) }} {{ __spacesClasses(spaces) }}">
                    {% if title %}
                        <h1 class="s-typo s-typo-h3 _title">
                            {{ title|raw }}
                        </h1>
                    {% endif %}
                    {% if intro %}
                        <p class="s-typo s-typo-lead _intro">
                            {{ intro|raw }}
                        </p>
                    {% endif %}
                    {% if text %}
                        <p class="s-typo s-typo-p _text">
                            {{ text|raw }}
                        </p>
                    {% endif %}
                   {% if ctas|length %}
                        <div class="_ctas">
                            {% for cta in ctas %}
                                <div class="_cta">
                                    {% include 'sugar/components/cta/cta.twig' with cta only %}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>                    
            </div>
            <div class="_image">
                {% if image.url %}
                    <div>
                        <picture class="s-media-container">
                            {% for media, image in image.media %}
                                <source srcset="{{ image.url }}" media="{{ media }}">
                            {% endfor %}
                            <img class="_img s-media" src="{{ image.url }}" title="{{ image.title }}" alt="{{ image.alt }}" />
                        </picture>
                    </div>
                {% endif %}
            </div>
    </div>

{% endblock %}
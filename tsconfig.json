{
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "__tests__",
    "**/__tests__",
    "**/__tests__/**",
    "__wip__",
    "**/__wip__",
    "**/__wip__/**",
    "__tests__.wip",
    "**/__tests__.wip",
    "**/__tests__.wip/**",
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "traceResolution": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": false,
    "noStrictGenericChecks": false,
    "allowSyntheticDefaultImports": true
  }
}

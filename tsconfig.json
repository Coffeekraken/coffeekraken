{
  "include": [
    "packages/*/*/src/cli/**/*",
    "packages/*/*/src/js/**/*",
    "packages/*/*/src/node/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  }
}

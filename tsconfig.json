{
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "__tests__.wip",
    "**/__tests__.wip",
    "**/__tests__.wip/**"
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "traceResolutions": true,
    "preserveSymlinks": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": false,
    "noStrictGenericChecks": false,
    "allowSyntheticDefaultImports": true
  }
}
